@model AWDProjectFinal.Models.OwnerApartment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OwnerApartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
