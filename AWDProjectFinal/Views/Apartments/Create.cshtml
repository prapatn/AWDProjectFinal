@model AWDProjectFinal.ViewModels.ApartmentsViewModel.CreatePostViewModel

@{
    ViewData["Title"] = "Create";
}
<html>
    <head>
         <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>SB Admin 2 - Dashboard</title>

        <!-- Custom fonts for this template-->
        <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">

        <!-- Custom styles for this template-->
        <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    </head>
    <body>
        <h1  class="h1 mb-2 text-gray-900">เพิ่มรายชื่อหอใหม่</h1>

        <h4 class="h4 mb-2 text-gray-900">กรุณากรอกข้อมูลให้ครบถ้วน</h4>
        <hr />
        <div class="row">
            <div class="card shadow col-md-6 center">
                <div style="margin:35px">
                    <form asp-action="Create" enctype="multipart/form-data" class="user">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control form-control-user" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control form-control-user" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ApartmentType" class="control-label"></label>
                            <select class="form-control" id="ApartmentType" name="ApartmentType" asp-for="ApartmentType" >
                            <option>Male</option> 
                            <option>Female</option>
                            <option>All</option> 
                        </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="AmountRoom" class="control-label"></label>
                            <input asp-for="AmountRoom" class="form-control" />
                            <span asp-validation-for="AmountRoom" class="text-danger"></span>
                        </div>
                        <div class="form-group" >
                            <select asp-for="Selectnameowner" asp-items="Model.selectOwner" multiple>
                                <option disabled selected > ---โปรดเลือกเจ้าของหอ--</option>
                            </select>
                        </div>
                        <div>
                            <input asp-for="ImageFile" accept="images/*" class="center"/>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary btn-user btn-block" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </body>
</html>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
